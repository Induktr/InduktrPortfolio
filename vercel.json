{
  "version": 2,
  "functions": {
    "server/api/**/*": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/api/$1",
      "headers": {
        "Cache-Control": "no-store, max-age=0",
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization, X-Client-Info, apikey"
      }
    },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/favicon.(ico|png)", "dest": "/favicon.$1" },
    { "src": "/(.*).js", "dest": "/$1.js" },
    { "src": "/(.*).css", "dest": "/$1.css" },
    { "src": "/(.*).svg", "dest": "/$1.svg" },
    { "src": "/(.*).json", "dest": "/$1.json" },
    { "src": "/(.*).png", "dest": "/$1.png" },
    { "src": "/(.*).jpg", "dest": "/$1.jpg" },
    { "src": "/(.*).gif", "dest": "/$1.gif" },
    { "src": "/(.*).woff2", "dest": "/$1.woff2" },
    { "src": "/(.*).woff", "dest": "/$1.woff" },
    { "src": "/(.*).ttf", "dest": "/$1.ttf" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
} 