{
  "version": 2,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/assets/(.*)",
      "dest": "dist/public/assets/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "dist/public/favicon.ico"
    },
    {
      "src": "/(.*)",
      "dest": "dist/public/index.html",
      "headers": {
        "Cache-Control": "s-maxage=0"
      }
    }
  ]
} 